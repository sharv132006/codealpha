import random

words_list = ["python", "hangman", "developer", "project", "github", "robotics"]
word = random.choice(words_list)
display = ["_"] * len(word)
lives = 6
guessed_letters = []

print("ğŸ® Welcome to Hangman!")
print("Guess the word: ", " ".join(display))

while "_" in display and lives > 0:
    guess = input("ğŸ‘‰ Enter a letter: ").lower()

    if len(guess) != 1 or not guess.isalpha():
        print("âŒ Please enter a single alphabet letter.")
        continue

    if guess in guessed_letters:
        print("âš ï¸ You already guessed that letter.")
        continue

    guessed_letters.append(guess)

    if guess in word:
        for i in range(len(word)):
            if word[i] == guess:
                display[i] = guess
        print("âœ… Good guess!")
    else:
        lives -= 1
        print("âŒ Wrong guess. You lost a life.")

    print("\nWord: ", " ".join(display))
    print("â¤ï¸ Lives left:", lives)
    print("ğŸ“œ Guessed letters:", ", ".join(guessed_letters))
    print("-" * 40)

if "_" not in display:
    print("ğŸ† YOU WIN! The word was:", word)
else:
    print("ğŸ’€ GAME OVER. The word was:", word)
